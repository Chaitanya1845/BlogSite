<%layout('layouts/boilerplate') %>

<h1 class="text-center">Blogs</h1>
<div class="text-center">
    <a href="/blogs/new" class="mb-5 mt-3 btn btn-outline-primary">Add Blog</a>
</div>
<% for(let blog of blogs){ %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= blog.images[0].url%>" class="img-fluid" alt="noimage">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%=blog.title%> </h5>
                <p class="card-text"><%=blog.body.substring(0,450)%></p>
                <a href="/blogs/<%=blog._id%>" class="btn btn-outline-primary">View Blog</a>
            </div>
        </div>
    </div>
</div>
<% } %>