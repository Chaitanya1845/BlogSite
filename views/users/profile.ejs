<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>BlogSite</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/profile.css">

    </head>


    <body class="d-flex flex-column" style="min-height: 100vh;">


        <%-include('../partials/navbar') %>
        <main class="container mt-5">
            <%-include('../partials/flash')%>

            <div class="row text-center">
                <div class="col-md-6 offset-md-3">
                    <div class="card mb-3">
                        <div class="card-body">

                            <div class="bg-primary rounded-circle mb-3  mx-auto" style="width: 100px; height: 100px;">
                                <div class="text-white fs-3 text-center" style="width: 100px; line-height: 100px;">
                                    <%=user.username.substring(0,2).toUpperCase() %>
                                </div>
                            </div>
                            <p class="lead text-light fw-bold fs-4">Username-: <%=user.username %> </p>
                            <p class="  lead  text-light fw-bold fs-4">Email-: <%=user.email  %> </p>
                            <p class="  lead  text-light fw-bold fs-4">Blog Posted-: <%=blogs.length  %> </p>
                            <p class="  lead  text-light fw-bold fs-4">Liked Blogs-: <%=user.likedBlogs.length  %>
                            </p>
                            <p class="  lead  text-light fw-bold fs-4">Disliked Blogs-:
                                <%=user.dislikedBlogs.length  %> </p>

                            <p class="  lead  text-light fw-bold fs-4">
                                Joined-:<%=user.createdAt.getDate()%>/<%=user.createdAt.getMonth()+1%>/<%=user.createdAt.getFullYear()%>
                            </p>
                            <div class="row">
                                <div class="col">
                                    <a href="/blogs" class="text-decoration-none">All Blog</a>
                                </div>
                                <div class="col">
                                    <% if(blogs.length) { %>
                                    <a id="blog-a" class="text-decoration-none col-md-8" data-bs-toggle="collapse"
                                        href="#collapseBlog" aria-expanded="false" aria-controls="collapseBlog"> Blogs
                                        by <%=user.username%>
                                    </a>
                                    <% } %>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-center collapse" id="collapseBlog">
                    <div class="col-md-6 offset-md-3">
                        <div class="card  mb-3 ">
                            <div class="card-body ">

                                <h5 class="card-title text-light"><%=blogs.length%> Blogs Posted by
                                    <%=user.username%></h5>
                                <% for(let blog of blogs) { %>
                                <div class="card my-3">
                                    <div class="row">
                                        <div class="col">
                                            <div class="card-body">
                                                <h5 class="card-title text-light"><%= blog.title %></h5>

                                                <a href="/blogs/<%= blog._id %>" class="text-decoration-none">View
                                                    Blog</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
        </main>
        <%-include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
    </body>

</html>